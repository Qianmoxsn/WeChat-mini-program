/* pages/air/air.wxss */

.container {
  background-color: #F8F8F8;
  height: 70vh;
  padding: 0 20rpx;
}

.header {
  height: 88rpx;
  display: flex;
  align-items: center;
}

.back-btn {
  width: 88rpx;
  height: 88rpx;
  background-size: cover;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
}

.icon-container {
  margin-top: 0rpx;
  display: flex;
  align-items: center;
}

.icon {
  width: 180rpx;
  height: 180rpx;
}

.switch-container {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.switch-btn {
  width: 240rpx;
  height: 80rpx;
  margin-top: 20rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.on {
  background-color: #F95C4E;
}

.ai {
  background-color: #4E97F9;
}

.off {
  background-color: #A3A3A3;
}

.menu {
  margin-top: 0rpx;
}

.menu-item {
  margin-bottom: 30rpx;
}

.menu-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
  }
  
  .mode-select {
  display: flex;
  }
  
  .mode-item {
  font-size: 16px;
  color: #666;
  border: 1px solid #ccc;
  border-radius: 20px;
  padding: 5px 10px;
  margin-right: 10px;
  }
  .back {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 100rpx;
    height: 100%;
    padding: 0 30rpx;
    cursor: pointer;
  }
  
  .back-icon {
    width: 30rpx;
    height: 30rpx;
  }
  .mode-item.active {
  color: #fff;
  background-color: #4da1ff;
  border-color: #4da1ff;
  }
  
  .temperature-select {
  display: flex;
  align-items: center;
  }
  
  .temperature-value {
  font-size: 24px;
  font-weight: bold;
  color: #666;
  margin: 0 10px;
  }
  
  .minus,
  .plus {
  font-size: 24px;
  color: #666;
  border: 1px solid #ccc;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  text-align: center;
  line-height: 40px;
  margin-right: 10px;
  }
  
  .plus:hover,
  .minus:hover {
  background-color: #f5f5f5;
  }
  
  .fan-speed-select {
  display: flex;
  }
  
  .fan-speed-item {
  font-size: 16px;
  color: #666;
  border: 1px solid #ccc;
  border-radius: 20px;
  padding: 5px 10px;
  margin-right: 10px;
  }
  
  .fan-speed-item.active {
  color: #fff;
  background-color: #4da1ff;
  border-color: #4da1ff;
  }