/* scene-preview.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
}

.button-group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 30rpx;
}

.button {
  background-color: #00a4ff;
  color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 80rpx;
  margin: 0 20rpx;
  border-radius: 40rpx;
  border: 2rpx solid #666;
  font-size: 28rpx;
  font-weight: bold;
  cursor: pointer;
}

.select-wrapper {
  margin-top: 40rpx;
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 50rpx;
}

.select {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background-color: #fff;
  color: #333;
  font-size: 28rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
  padding: 0 30rpx;
}

.arrow {
  width: 40rpx;
  height: 40rpx;
  transform: rotate(180deg);
}


.picker {
  font-size: 28rpx;
  text-align: center;
}

.canvas {
  width: 100%;
  height: 600rpx;
  margin-bottom: 50rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}
