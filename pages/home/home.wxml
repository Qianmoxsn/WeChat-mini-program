<!--pages/home/home.wxml-->
<view class="container">
  <!-- 轮播图 -->
  <view class="swiper-container">
    <swiper class="banner" indicator-dots autoplay interval="5000">
    <swiper-item class="si">
      <image class="first" src="/images/icon/1.png" mode="widthFix"></image>
    </swiper-item >
    <swiper-item class="si">
      <image class="first" src="/images/icon/2.png" mode="widthFix"></image>
    </swiper-item>
    <swiper-item class="si">
      <image class="first" src="/images/icon/3.png" mode="widthFix"></image>
    </swiper-item>
  </swiper>
  </view>
  <!-- 顶部场景预览按钮 -->
  <button bindtap="handleButtonClick" class="preview-btn" data-url="/pages/new/new">
    <image src="/images/icon/liststyle.png"></image>
    <view>场景预览</view>
  </button>
  <!-- 模块列表 -->
  <view class="module-list">
    <button bindtap="handleButtonClick" style="width: 45%;" class="module-item" data-url="/pages/add/add">
      <image src="/images/instrument/增加添加加号.svg"></image>
      <view class="module-title">添加智能设备</view>
    </button>
    <button style="width: 45%;" class="module-item">
      <image src="/images/instrument/图标-制冰机.svg"></image>
      <view class="module-title">制冰机</view>
    </button>
    <button bindtap="handleButtonClick" style="width: 45%;" class="module-item" data-url="/pages/air/air">
      <image src="/images/instrument/空调.svg"></image>
      <view class="module-title">空调</view>
    </button>
    <button bindtap="handleButtonClick" style="width: 45%;" class="module-item" data-url="/pages/light/light">
      <image src="/images/instrument/灯.svg"></image>
      <view class="module-title">卧室灯</view>
    </button>
    <button style="width: 45%;" class="module-item">
      <image src="/images/instrument/电视,显示器,显示屏,电视机,液晶显示器.svg"></image>
      <view class="module-title">电视</view>
    </button>
    <button style="width: 45%;" class="module-item">
      <image src="/images/instrument/更多.svg"></image>
      <view class="module-title">更多</view>
    </button>
  </view>
</view>
