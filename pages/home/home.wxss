/* index.wxss - 修改版 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  background-color: #f5f5f5;  
}

.preview-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 50px;
  background-color: #fff;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);
  margin-top: 0px;
}

.preview-btn image {
  width: 24px;
  height: 24px;
  margin-right: 5px;
}

.swiper-container {
  width: 100%;
  height: 150px;
  margin-bottom: 0px;
}

.module-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 90%;
  margin-top: 20px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);
  padding: 20px;
}

.module-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 30%;
  margin: 2%;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);
}

.module-item image {
  width: 40px;
  height: 40px;
}

.module-title {
  margin-top: 10px;
  font-size: 14px;
  color: #666;
}
